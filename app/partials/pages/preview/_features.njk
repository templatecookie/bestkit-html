            </div>
        </div>
        <div class="row featre-card-bottom justify-content-center">
            {% for item in cardData%}
                <div class="col-lg-3 col-md-4 col-xs-6 col-9 col-xxl-3" data-aos="fade-up" data-aos-delay="{{ 200 * item.id }}" data-aos-duration="1000">
                        {{Card.FeatureCard({
                            modifier:"feature-card--02 bg-transparent",
                            img:item.img,
                            text:item.text,
                            title:item.title
                        })}}
