{% macro render(args) %}
{% import "components/cards.njk" as Card %}

{% set cardData =[
        {
        id:1,
        img:"./image/l-4/team-1.png",
        name:"Miranda Halim",
        position:"CEO & Founder"
        },
        {
        id:2,
        img:"./image/l-4/team-2.png",
        name:"Micheal Carlo",
        position:"CEO & Founder"
        },
        {
        id:3,
        img:"./image/l-4/team-3.png",
        name:"Sonia Paul",
        position:"Web Designer"
        },
        {
        id:4,
        img:"./image/l-4/team-4.png",
        name:"Mark Ronson",
        position:"Web Developer"
        }


]%}
    <div class="team-section-01">
        <div class="container">
            <div class="row justify-content-center">
                <div class="section-title-block text-center">
                    <h6 class="subtitle mb-10 text-primary">Team Member</h6>
                    <h2 class="title">Meet Our Great Team</h2>
                </div>
            </div>
            <div class="row card-row justify-content-center">
                {% for item in cardData %}
                    <div class="col-lg-3 col-sm-6 col-xs-8" data-aos="fade-up" data-aos-delay="{{ 150 * item.id }}" data-aos-duration="800">
                        {{Card.TeamOne({
                            img:item.img,
                            modifier:item.activeClass,
                            name:item.name,
                            position:item.position
                        })}}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endmacro %}
