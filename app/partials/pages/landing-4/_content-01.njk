{% macro render(args) %}
{% import "components/cards.njk" as Card %}

{% set cardData =[
        {
        img:"./image/l-4/coffee.svg",
        title:"Outline Your Business Goal",
        text:"It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout."
        },
        {
        img:"./image/l-4/send.svg",
        title:"Reach Your Right Customer",
        text:"It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout."
        },
        {
        img:"./image/l-4/user-check.svg",
        title:"Get Your Result",
        text:"It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout."
        }


]%}
<div class="content-section-05 bg-white-lilac">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="section-title-block text-center">
                <h6 class="subtitle text-primary mb-10">Working Process</h6>
                <h2 class="title">How Does Bestkit Works?</h2>
            </div>
        </div>
